// CREAR PRODUCTO GENÉRICO
POST http://localhost:4004/admin/productos
Content-Type: application/json

{
    "nombre": "Producto de Prueba",
    "precio": 29.99,
    "descripcion": "Descripción del producto",
    "stock": 10,
    "tipo": "merchandising",
    "imagen_url": "https://example.com/imagen.jpg"
}

###

// ACTUALIZAR PRODUCTO
PUT http://localhost:4004/admin/productos/1
Content-Type: application/json

{
    "nombre": "Producto Actualizado",
    "precio": 39.99,
    "stock": 15
}

###

// ELIMINAR PRODUCTO
DELETE http://localhost:4004/admin/productos/1

